{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"jsx": "react-jsx",
		"types": [
			"vite/client",
		],
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./src/@types"
		]
	},
	"include": [
		"src",
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"node_modules"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}